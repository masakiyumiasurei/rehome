@using System.Security.Claims;
@{
    ViewData["Title"] = "分類一覧";
}
@model BunruiIndexModel

<div>
    <p>@ViewBag.OperationMessage</p>
</div>

<div class="text-center">
    <h2>分類一覧</h2>
    <button type="button" class="custom-btn btn-1" onclick="SwitchSearch();" id="SwitchButton">検索条件▼</button>


    <div id="Search-Area" name="hide" style="display: none;">
        <br>
        @using (Html.BeginForm("Search", "Bunrui", FormMethod.Get, new { @class = "row g-3" }))
        {
            @await Html.PartialAsync("_BunruiSearch")
        }
    </div>
</div>
@if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.System).Value == "True")
{
    <div style="text-align:right">
        <a href="@Url.Action("New", "Bunrui")" class="custom-btn btn-1"><i class="fa fa-plus-square" aria-hidden="true"></i> 新規</a>
    </div>
    <br>
}


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <table class="table table-striped table-hover table-sm ">
        <thead>
            <tr>
                <th>分類名</th>
                <th>理化学医療区分</th>
                <th>表示順</th>

                <th>詳細</th>
            </tr>
        </thead>

        @foreach (var item in Model.Bunrui)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.分類名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.理化学医療区分)
                </td>
                
               
                 <td>
                    @Html.DisplayFor(modelItem => item.ソート)
                </td>

                

                <td><div class="text-center">
                    <a href="@Url.Action("Details", "Bunrui", new { 分類ID = @item.分類ID })")" class="custom-btn btn-1"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                </div></td>

            </tr>
        }

   

</div>




@section Scripts{

}