@model BunruiDetailModel
<div class="row">

    @Html.HiddenFor(m => m.Bunrui.分類ID)

            <div class="row">
             <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
              <div class="tile-box">
                <label for="name" class="col-xs-1 tile-label2">分類名</label>
                    @Html.TextBoxFor(m => m.Bunrui.分類名, new { @class = "form-control" })

                </div>
               </div></div>


              


             <div class="row">
             <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
