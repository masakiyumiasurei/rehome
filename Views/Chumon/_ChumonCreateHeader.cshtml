@model ChumonCreateModel
@using rehome.Models.DB;
@using rehome.Enums;

<div class="row m-3">
    <div class="row">

        @Html.HiddenFor(a => a.Quote.見積ID)
        @Html.HiddenFor(a => a.Quote.履歴番号)
        @Html.HiddenFor(a => a.Quote.最新FLG)
        @Html.HiddenFor(a => a.Quote.担当ID)
        @Html.HiddenFor(a => a.Quote.営業所ID)
        @Html.HiddenFor(a => a.Chumon.注文ID)
        @Html.HiddenFor(a => a.Mode)
        @Html.HiddenFor(a => a.BackUrl)

        <div class="col-12 col-sm-2">
            <label>注文の金額合計</label>
            @Html.TextBoxFor(a => a.Chumon.金額,"{0:#,##0.#}", new { @id="chumon_kingaku",
            @class = "form-control enable-false form-control-sm",tabindex="-1",type="money" })
        </div>

        <div class="col-12 col-sm-2">
            <label>枝番</label>
            @Html.EditorFor(a => a.Chumon.枝番, new {htmlAttributes = new { @class = "form-control form-control-sm",@type="number",@min="1"}})
        </div>

    </div>

    <div class="row">
        <div class="col-12 col-sm-2">
            <label>仕入先名</label>
            @if (Model.Mode == ViewMode.New)
            {
                @Html.DropDownListFor(m => m.Chumon.仕入先ID,new SelectList(Model.仕入先DropDownList, "Value", "Display"),  "選択してください",  new { @class = "form-control-chosen form-control-sm"} )
            }
            else
            {
                @Html.DropDownListFor(m => m.Chumon.仕入先ID,new SelectList(Model.仕入先DropDownList, "Value", "Display"),  "選択してください",  new { @class = "form-control form-control-sm", disabled = "disabled"} )
            }

        </div>
        <div class="col-12 col-sm-2">
            <label>自由仕入先名(こちらが優先されます)</label>
            @if (Model.Mode == ViewMode.New)
            {
                @Html.EditorFor(a => a.Chumon.自由仕入先名, new {htmlAttributes = new { @class = "form-control form-control-sm"}})
            }
            else
            {
                @Html.EditorFor(a => a.Chumon.自由仕入先名, new {htmlAttributes = new { @class = "form-control form-control-sm",disabled = "disabled"}})
            }

        </div>
        <div class="col-12 col-sm-2">
            <label>摘要</label>
            @Html.EditorFor(a => a.Chumon.摘要, new {htmlAttributes = new { @class = "form-control form-control-sm"}})
        </div>
        <div class="col-12 col-sm-2">
            <label>納期(期間)</label>
            @Html.EditorFor(a => a.Chumon.納期, new {htmlAttributes =new { data_options = anylist.納期items, @class = "free_dropdown form-control form-control-sm" }})
        </div>
        <div class="col-12 col-sm-4">
            <label>納入先住所等</label>
            @Html.EditorFor(a => a.Chumon.納入先, new {htmlAttributes = new { @class = "form-control form-control-sm"}})
        </div>
        @*<div class="col-12 col-sm-2">
            <label>弊社担当者</label>
            @Html.EditorFor(a => a.Chumon.弊社担当者, new {htmlAttributes
            = new  { data_options = anylist.注文担当items, @class = "free_dropdown form-control form-control-sm" }})
        </div>*@
    </div>
    <div class="col-12 col-sm-2">
        <label>支払締日</label>
        @Html.EditorFor(a => a.Chumon.支払締め, new {htmlAttributes = new { @class = "form-control form-control-sm"}})
    </div>
    <div class="col-12 col-sm-2">
        <label>支払日</label>
        @Html.EditorFor(a => a.Chumon.支払日, new {htmlAttributes = new { @class = "form-control form-control-sm"}})
    </div>
    <div class="col-12 col-sm-2">
        <label>作成日</label>
        @Html.EditorFor(a => a.Chumon.作成日, new {htmlAttributes = new { @class = "form-control form-control-sm", @type = "date"}})
    </div>
</div>





