<input type="hidden" value="IndexCustom" id="UserCustom_FunctionName">

@*    <div class="container">*@
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <table id="myTable" class="table table-striped table-hover " style="width:100%">
        <thead>
            <tr>
                <th class="column5">詳細</th>
                <th class="column5">履歴</th>
                
                <th id="IndexCustom_Quote_顧客名">顧客名</th>
                <th id="IndexCustom_Quote_案件名">工事件名</th>
                <th id="IndexCustom_Quote_担当者名">担当者名</th>
                <th id="IndexCustom_Quote_ステータス">ステータス</th>
                <th id="IndexCustom_Quote_請求日">請求日</th>
                <th id="IndexCustom_Quote_売上">売上</th>
                <th id="IndexCustom_Quote_見込原価">見込原価</th>
                <th id="IndexCustom_Quote_原価">原価</th>
                <th id="IndexCustom_Quote_見込利益">見込利益</th>
                <th id="IndexCustom_Quote_利益">利益</th>
                @*<th>見込粗利率</th>
                <th>粗利率</th>*@

            </tr>
        </thead>
        @if (Model.Quotes != null)
        {
            @foreach (var item in Model.Quotes)
            {
                <tr>
                    <td>
                        <div class="text-center">
                            <a href="@Url.Action("Create", "Quote", new { 見積ID = @item.見積ID, 履歴番号 = @item.履歴番号 })"
                               class="custom-btn btn-size-min btn-1"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.履歴番号)
                    </td>                    
                    <td id="IndexCustom_Quote_顧客名">
                        @Html.DisplayFor(modelItem => item.顧客名)
                    </td>
                    <td id="IndexCustom_Quote_案件名">
                        @Html.DisplayFor(modelItem => item.件名)
                    </td>
                    <td id="IndexCustom_Quote_担当者名">
                        @Html.DisplayFor(modelItem => item.担当者名)
                    </td>
                    <td id="IndexCustom_Quote_ステータス">
                        @Html.DisplayFor(modelItem => item.見積ステータス)
                    </td>
                    <td id="IndexCustom_Quote_請求日" class="right-align">
                        @Html.DisplayFor(modelItem => item.請求日)
                    </td>
                    <td id="IndexCustom_Quote_売上" class="right-align">
                        @Html.DisplayFor(modelItem => item.売上)
                    </td>
                    <td id="IndexCustom_Quote_見込原価" class="right-align">
                        @Html.DisplayFor(modelItem => item.見込原価)
                    </td>
                    <td id="IndexCustom_Quote_原価" class="right-align">
                        @Html.DisplayFor(modelItem => item.原価)
                    </td>
                    <td id="IndexCustom_Quote_見込利益" class="right-align">
                        @Html.DisplayFor(modelItem => item.見込利益)
                    </td>
                    <td id="IndexCustom_Quote_利益" class="right-align">
                        @Html.DisplayFor(modelItem => item.利益)
                    </td>
                    @*<td>
            @Html.DisplayFor(modelItem => item.見込粗利率,"{0:0.0%}")
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.粗利率,"{0:0.0%}")
            </td>*@

                    @*<td>
            <a href="/Quote/Delete/@item.顧客ID" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>*@
                </tr>
            }
        }

    </table>
</div>

@section Scripts{
    <script>

        window.onload = function () {
            var actv;
            localStorage.setItem("myKey", "Quote");
            $('#bar-Quote').addClass('active');
        }

        function create_quote(理化学医療区分) {
            var checkboxValue = document.querySelector('#single').checked;
            var url = '/Quote/Create?理化学医療区分=' + 理化学医療区分 + '&single=' + checkboxValue;
            window.location.href = url;
        }

    </script>
}