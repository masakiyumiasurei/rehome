                <div class="col-5 col-sm-2" >
                    <a href="@Url.Action("Index", "Client")" class="custom-btn btn-2">戻る</a>
                </div>
            </div>*@
}

@section Scripts{
    <script>



        

        $(function() {

             $('#btnSubmit').on('click', function() {

                    
            });

            //削除
            $('#btnDelete').on('click', function() {
                var result = window.confirm('仕入先情報を削除しますか？');
                if (result == false) {
                    return false;
                }
            });
        });

        
    </script>

}

                        