@using System.Security.Claims;
@{
    ViewData["Title"] = "担当者一覧";
}
@model TantouIndexModel

<div>
    <p>@ViewBag.OperationMessage</p>
</div>

<div class="text-center">
    <h2>担当者一覧</h2>
    <button type="button" class="custom-btn btn-1" onclick="SwitchSearch();" id="SwitchButton">検索条件▼</button>


    <div id="Search-Area" name="hide" style="display: none;">
        <br>
        @using (Html.BeginForm("Search", "Tantou", FormMethod.Get, new { @class = "row g-3" }))
        {
            @await Html.PartialAsync("_TantouSearch")
        }
    </div>
</div>
@if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.System).Value == "True")
{
    <div style="text-align:right">
        <a href="@Url.Action("New", "Tantou")" class="custom-btn btn-1"><i class="fa fa-plus-square" aria-hidden="true"></i> 新規</a>
    </div>
    <br>
}


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <table class="table table-striped table-hover table-sm ">
        <thead>
            <tr>
                <th class="column5">詳細</th>
                <th>ログインID</th>
                <th>担当名</th>
                <th>営業所</th>
                <th>TEL</th>
                
            </tr>
        </thead>

        @foreach (var item in Model.Tantous)
        {
            <tr>
                <td>
                    <div class="text-center">
                        <a class="custom-btn btn-size-min btn-1" href="@Url.Action("Details", "Tantou", new { 担当ID = item.担当ID })" )"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.loginID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.氏名)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.営業所名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tel)
                </td>
            </tr>
        }          

</div>

@section Scripts{

}